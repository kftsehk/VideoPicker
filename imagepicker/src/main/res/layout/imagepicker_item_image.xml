<?xml version="1.0" encoding="utf-8"?>
<com.nguyenhoanglam.imagepicker.widget.SquareFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foregroundGravity="center"
    tools:override="false">

    <ImageView
        android:id="@+id/image_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <View
        android:id="@+id/view_alpha"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/imagepicker_black" />

    <ImageView
        android:id="@+id/vid_indicator"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="bottom|end"
        android:outlineSpotShadowColor="#000000"
        android:paddingLeft="@dimen/imagepicker_padding_small"
        android:paddingTop="@dimen/imagepicker_padding_small"
        android:paddingRight="@dimen/imagepicker_padding_small"
        android:paddingBottom="@dimen/imagepicker_padding_small"
        android:src="@drawable/ic_theaters_24px" />
</com.nguyenhoanglam.imagepicker.widget.SquareFrameLayout>